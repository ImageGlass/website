{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "outDir": "../wwwroot/js/",
    "noImplicitAny": true,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}