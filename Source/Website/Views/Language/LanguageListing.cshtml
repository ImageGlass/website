@model IEnumerable<LanguageModel>;


@* Posts list *@
<div class="container py-5 mx-auto">
  <h1 class="aniFadeIn">All language packs</h1>
  <div class="mb-4 aniSlideUp ani-delay-25">
    ImageGlass uses Crowdin service for translation.<br/>
    You can join and request for your language at:
    <a href="https://crowdin.com/project/imageglass/invite" target="_blank" rel="noopener noreferrer">https://crowdin.com/project/imageglass/invite</a>.
  </div>

  @* Ads *@
  <div class="mb-5 aniSlideUp ani-delay-50">
    <div class="sidebar-item section-quang-cao">
      @await Html.PartialAsync("_Ads")
    </div>
  </div>

  <section class="language-list aniSlideUp ani-delay-75">
    <ul>
      @foreach (var item in Model)
      {
        <li>
          <a class="btn" asp-action="DownloadLanguage" asp-route-langId="@(item.LanguageId)" asp-route-langName="@(item.Name)" title="Download @item.Name language pack">
            <div class="lang-img">
              <img height="32" src="~/img/lang/@(item.LanguageId).png" alt="@item.Name" onerror="this.hidden = true" />
            </div>
            <span>@item.Name</span>
            <span class="lang-progress">@item.TranslationProgress%</span>
          </a>
        </li>
      }
    </ul>
  </section>
</div>
