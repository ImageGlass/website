<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("~/Views/_Partials/_Head.cshtml")
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ImageGlass</a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="News" asp-action="Index">News</a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Download" asp-action="Index">Download</a>

                            <ul>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Release" asp-action="StableReleasesListingPage">Stable releases</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Release" asp-action="BetaReleasesListingPage">Beta releases</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Theme" asp-action="ThemePackListingPage">Theme packs</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="ExtensionIcon" asp-action="ExtensionIconListingPage">Extension icon packs</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Language" asp-action="LanguageListing">Language packs</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="Docs" asp-action="Index">Docs</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Support" asp-action="Index">Support</a>
                        </li>

                        <li class="nav-item">
                            <a asp-area="" asp-controller="About" asp-action="Index">About</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Url" asp-action="Index">Url</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2010-@(DateTime.UtcNow.Year) Duong Dieu Phap - <a asp-area="" asp-controller="Home" asp-action="PrivacyPage">Privacy</a>
        </div>
    </footer>

    @await Html.PartialAsync("~/Views/_Partials/_Foot.cshtml")

    @* Other JavaScript stuffs *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
