<!DOCTYPE html>
<html lang="en">
<head>
    @await Html.PartialAsync("~/Views/_Partials/_Head.cshtml")
</head>
<body>
    <header>
        <nav class="navbar container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ImageGlass</a>

            <input type="checkbox" id="chkMobileMenu">
            <label for="chkMobileMenu">
                <span class="bar1"></span>
                <span class="bar2"></span>
                <span class="bar3"></span>
            </label>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-area="" asp-controller="News" asp-action="Index">News</a>
                </li>

                <li class="nav-item nav-submenu nav-item--active">
                    <a asp-area="" asp-controller="Download" asp-action="Index">Download</a>

                    <ul>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Release" asp-action="StableReleasesListingPage">Stable releases</a>
                        </li>
                        <li class="nav-item nav-item--active">
                            <a asp-area="" asp-controller="Release" asp-action="BetaReleasesListingPage">Beta releases</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Theme" asp-action="ThemePackListingPage">Theme packs</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="ExtensionIcon" asp-action="ExtensionIconListingPage">Extension icon packs</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Language" asp-action="LanguageListing">Language packs</a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item nav-submenu">
                    <a asp-area="" asp-controller="Support" asp-action="Index">Support</a>
                    <ul>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Support" asp-action="FAQsPage">FAQs</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Support" asp-action="PrivacyPage">Privacy policy</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Support" asp-action="LicensePage">End-user license agreement</a>
                        </li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a asp-area="" asp-controller="Docs" asp-action="Index">Docs</a>
                </li>

                <li class="nav-item">
                    <a asp-area="" asp-controller="About" asp-action="Index">About</a>
                </li>
            </ul>

        </nav>
    </header>

    <div class="container body-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col col-12 col-lg-6 mb-3">
                    &copy; 2010-@(DateTime.UtcNow.Year) Duong Dieu Phap
                    - <a asp-area="" asp-controller="Support" asp-action="PrivacyPage">Privacy</a>
                </div>
                <div class="col col-12 col-lg-6 mb-3 text-lg-end">
                    <a href="#" target="_blank" rel="noreferrer nofollow noopener">GitHub</a>
                    <a href="#" target="_blank" rel="noreferrer nofollow noopener">Twitter</a>
                    <a href="#" target="_blank" rel="noreferrer nofollow noopener">Youtube</a>
                    <a href="#" target="_blank" rel="noreferrer nofollow noopener">Facebook</a>
                    <a href="#" target="_blank" rel="noreferrer nofollow noopener">Instagram</a>
                    <a href="#" target="_blank" rel="noreferrer nofollow noopener">Medium</a>
                </div>
            </div>
        </div>
    </footer>

    @await Html.PartialAsync("~/Views/_Partials/_Foot.cshtml")

    @* Other JavaScript stuffs *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
