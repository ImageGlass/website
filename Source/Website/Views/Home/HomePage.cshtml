@* ------------------ Open source *@
<div class="container-fluid home-open-source py-5">
  <div class="container-limit">
    <h2 class="fw-400 mt-4">Open Source Image Viewer</h2>
    <div class="mb-5 mx-auto opacity-65" style="max-width: 700px;">
      Explore the world of an open-source image viewer, a feature-rich and customizable solution for all your image viewing needs
    </div>
    @if (!string.IsNullOrWhiteSpace(starsCount)) {
      <ul class="repo-stats">
        <li>
          <div class="number">@starsCount</div>
          <div>Stars</div>
        </li>
        <li>
          <div class="number">@forksCount</div>
          <div>Forks</div>
        </li>
        <li>
          <div class="number">@subscribersCount</div>
          <div>Subscribers</div>
        </li>
      </ul>
    }

    <div>
