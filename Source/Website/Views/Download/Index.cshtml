                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Release.ReleaseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DownloadId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DownloadId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DownloadId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
